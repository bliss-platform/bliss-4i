//shareable are values that can be used
//to share across different workers.

using std.console;

Shareable<int> counter = 0;

Worker w1 = spawn (Worker e) => {

	for ( int i = 0; i < 100_000_000, i++ ) {
		counter++;
	}
	
	e.terminate();
	
};

Worker w2 = spawn (Worker e) => {

	for ( int i = 0; i < 100_000_000, i++ ) {
		counter++;
	}
	
	e.terminate();
	
};

w1.join();
w2.join();

console.log("The counter is: { counter }");